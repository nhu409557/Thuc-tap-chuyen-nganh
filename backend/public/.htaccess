<IfModule mod_rewrite.c>
    RewriteEngine On

    # --- CẤU HÌNH HEADER Authorization ---
    # Giúp PHP nhận được Token Bearer
    RewriteCond %{HTTP:Authorization} ^(.*)
    RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]

    # --- ĐIỀU HƯỚNG ---
    # Kiểm tra nếu không phải file thực (!) hoặc thư mục thực (!-d)
    # thì chuyển tất cả về index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Quan trọng: Không dùng RewriteBase cứng, để tự động nhận diện
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>